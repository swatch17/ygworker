/**index.wxss**/
.task {
  display: flex;
  justify-content: space-evenly;
  margin: 20px 0;
}

.task__item {
  display: block;
  position: relative;
}

.task-img {
  display: flex;
  justify-content: center;
}

.task-icon {
  width: 36px;
  height: 36px;
  display: block;
}

.task-text {
  display: block;
}

.tips {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 18px;
  height: 18px;
  font-size: 12px;
  background-color: #F33151;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  top: -10px;
  right: 0;
}

.recommend {
  display: flex;
  padding: 0 15px;
  justify-content: space-between;
}

.recommend-item {
  display: flex;
  border-radius: 50%;
  height: 80px;
  width: 80px;
  font-size: 12px;
  justify-content: center;
  align-items: center;
  border: 1px solid #40a9ff;
}

.article {
  margin-top: 20px;
  padding: 0 20px;
}

.article-hd {
  font-size: 18px;
  font-weight: 500;
}

.article-item {
  margin: 5px 0;
  color: #989FA9;
}